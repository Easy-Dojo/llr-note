{
  "name": "llr-note",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "homepage": "./",
  "description": "cloud doc editor",
  "author": {
    "name": "Lingrui Liang",
    "email": "lrliang@thoughtworks.com"
  },
  "repository": "https://github.com/Easy-Dojo/llr-note.git",
  "dependencies": {
    "electron-store": "^5.1.1"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-app-rewired eject",
    "buildMain": "webpack",
    "electron-dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "pack": "electron-builder --dir",
    "prepack": "yarn build && yarn buildMain",
    "predist": "yarn build && yarn buildMain",
    "dist": "electron-builder",
    "prerelease": "yarn build && yarn buildMain",
    "release": "cross-env GH_TOKEN=3dedf796df0b670acb819f2d577384558922ac9c electron-builder"
  },
  "build": {
    "appId": "com.my-website.my-app",
    "productName": "MyNote",
    "copyright": "Copyright Â© 2020 ${author}",
    "extraMetadata": {
      "main": "./build/main.js"
    },
    "publish": ["github"],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "files": [
      "build/**/*",
      "settings/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "dmg": {
      "background": "assets/appdmg.png",
      "icon": "assets/icon.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 280,
          "type": "file"
        }
      ],
      "window": {
        "width": 500,
        "height": 500
      }
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@ant-design/icons": "^4.0.6",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "antd": "^4.1.2",
    "axios": "^0.19.2",
    "babel-plugin-import": "^1.13.0",
    "classnames": "^2.2.6",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "customize-cra": "^0.9.1",
    "electron": "^18.3.7",
    "electron-builder": "^22.7.0",
    "electron-is-dev": "^1.2.0",
    "electron-updater": "^4.3.1",
    "node-sass": "^4.13.1",
    "prop-types": "^15.7.2",
    "qiniu": "^7.3.1",
    "react": "^16.13.1",
    "uuid": "^7.0.3",
    "react-app-rewire-less": "^2.1.3",
    "react-app-rewired": "^2.1.5",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1",
    "react-simplemde-editor": "^4.1.0",
    "wait-on": "^5.0.0",
    "webpack-cli": "^3.3.11"
  }
}
